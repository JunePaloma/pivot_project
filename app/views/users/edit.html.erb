<h2>Edit My Account Information</h2>

<%= form_for [current_user] do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street, "Street" %>
  <%= f.text_field :street %>

  <%= f.label :city, "City" %>
  <%= f.text_field :city %>

  <%= f.label :state, "State" %>
  <%= f.text_field :state %>

  <%= f.label :zip_code, "Zip Code" %>
  <%= f.text_field :zip_code %>

  <%= f.label :phone, "Phone Number" %>
  <%= f.text_field :phone, placeholder: "1234567890" %>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email, placeholder: "example@example.com" %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>
