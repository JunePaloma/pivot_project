<h2>Edit Item</h2>

<%= form_for [:admin, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image_path %>
  <%= f.text_field :image_path %>

  <%= f.radio_button  :active, false, :value => false %>
  <%= f.label "retired", "retired" %>

  <%= f.radio_button :active, true %>
  <%= f.label "active", "active" %>
<br>
<br>
<br>
  <%= f.submit %>
<% end %>
