<h2>Edit Item</h2>
<%= simple_form_for [:admin, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image_path %>
  <%= f.text_field :image_path %>

  <%= f.input :active, as: :boolean, checked_value: true, unchecked_value: false, method: "post", id: "activebutton" %>
  <br />
  <%= f.submit %>
<% end %>
