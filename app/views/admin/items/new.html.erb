<h1>New Item form</h1>

<%= form_for [:admin, @item] do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :image_path %>
<%= f.text_field :image_path %>

<%= f.label :price %>
<%= f.text_field :price %>

<%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a Category" }, class: "browser-default" %>

<%= f.submit %>
<% end %>
