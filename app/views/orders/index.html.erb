<h2>Your Order History</h2>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Status</th>
      <th>Total Price</th>
      <th>Order Placed On:</th>
      <th>Order Updated At: </th>
      <th colspan="3"></th>
    </tr>

  </thead>

  <tbody class="table">
    <% @orders.each do |order| %>
      <div class="order<%= order.id %>">
        <tr>
        <td><%= link_to "Order: #{order.id}", order_path(order) %></td>
        <td><%= order.status.humanize %></td>
        <td><%= number_to_currency(order.total_price) %></td>
        <td><%= order.created_at.to_formatted_s(:long_ordinal) %> </td>
        <td><%= order.updated_at.to_formatted_s(:long_ordinal) %> </td>
      </div>
      <% end %>
    </tbody>
  </table>
