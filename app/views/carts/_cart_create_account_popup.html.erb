<!-- Button to open the modal login form -->
<button onclick="document.getElementById('id02').style.display='block'" id='cart_create_button' >Create Account</button>

<!-- The Modal -->
<div id="id02" class="modal">
  <span onclick="document.getElementById('id02').style.display='none'"
class="close" title="Close Modal">&times;</span>

  <!-- Modal Content -->
    <div class="container" id='cart_create_form'>
      <h4> Create Account </h4>
        <%= form_for @new_user do |f| %>
          <%= f.label :username %>
          <%= f.text_field :username %>
          <%= f.label :password %>
          <%= f.password_field :password %>
          <%= f.label "Confirm password" %>
          <%= f.password_field :password_confirmation %>
        <%= f.submit "Create Account", id: 'cart_create_complete'%>
      <% end %>
      <br />
    </div>
</div>
