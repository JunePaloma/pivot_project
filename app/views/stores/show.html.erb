<h1><%= @store.name %></h1>
<p><%= @store.description %></p>

<div class="row">
  <% @store.items[0..4].each do |item| %>
  <div class="col s12 m6 l3">
    <div class="card medium">
      <div class="card-image">
        <%= image_tag item.image_path %>
      </div>
      <div class="card-content">
        <p class="indextitle"> <%=link_to item.name, item_path(item)%>: <%= number_to_currency(item.price) %> </p>
        <p><%= item.description %></p>
      </div>
      <div class="card-action">
        <% if item.active %>
        <%= button_to 'add_shopping_cart', carts_path(item_id: item.id), class: "btn-large black large material-icons" %>
        <% else %>
        <%= button_to "add_shopping_cart", "#", class: "btn-large material-icons disabled" %>
        <% end %>
        <div class="space"></div>
        <%= button_to "info_outline", item_path(item.id), class: "btn-large black large material-icons" , method: 'get' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
